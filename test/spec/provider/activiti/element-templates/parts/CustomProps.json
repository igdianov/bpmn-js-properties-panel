[
  {
    "name": "ConnectorTask",
    "id": "my.connector.Task",
    "appliesTo": [
      "bpmn:ServiceTask"
    ],
    "properties": [],
    "scopes": {
      "activiti:Connector": {
        "properties": [
          {
            "label": "ConnectorId",
            "type": "String",
            "value": "My Connector HTTP",
            "binding": {
              "type": "property",
              "name": "connectorId"
            },
            "constraints": {
              "notEmpty": true
            }
          },
          {
            "label": "URL",
            "type": "String",
            "binding": {
              "type": "activiti:inputParameter",
              "name": "url"
            },
            "constraints": {
              "notEmpty": true
            }
          },
          {
            "label": "Method",
            "type": "Dropdown",
            "choices": [
              {
                "value": "GET",
                "name":"GET"
              },
              {
                "value": "POST",
                "name": "POST"
              },
              {
                "value": "PUT",
                "name": "PUT"
              },
              {
                "value": "PATCH",
                "name": "PATCH"
              },
              {
                "value": "DELETE",
                "name": "DELETE"
              }
            ],
            "binding": {
              "type": "activiti:inputParameter",
              "name": "method"
            },
            "constraints": {
              "notEmpty": true
            }
          },
          {
            "type": "Hidden",
            "value": "Camunda",
            "binding": {
              "type": "activiti:inputParameter",
              "name": "agent"
            }
          },
          {
            "label": "Template",
            "type": "Text",
            "description": "By the way, you can use freemarker templates ${...} here",
            "value": "Hello ${firstName}!",
            "binding": {
              "type": "activiti:inputParameter",
              "name": "messageBody",
              "scriptFormat": "freemarker"
            }
          },
          {
            "label": "Response",
            "type": "String",
            "value": "${S(response)}",
            "binding": {
              "type": "activiti:outputParameter",
              "name": "wsResponse",
              "source": "wsResponse"
            }
          },
        {
          "label": "Result",
          "type": "String",
          "value": "httpResult",
          "binding": {
            "type": "activiti:outputParameter",
            "source": "${httpResult}",
            "scriptFormat": "freemarker"
          }
        }
        ]
      }
    }
  },
  {
    "name": "MailTask",
